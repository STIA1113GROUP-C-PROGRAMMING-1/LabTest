package exercise;
import java.util.Scanner;
public class Labtest2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		
		System.out.println("ENTER MARK 1: ");
		double marka = sc.nextDouble();
		while(marka>100 || marka<0) {
		System.out.println("Invalid input! Try again!");
		System.out.println("ENTER MARK 1: ");
		marka = sc.nextDouble();
		}
		
		System.out.println("ENTER MARK 2: ");
		double markb = sc.nextDouble();
		while(markb>100 || markb<0) {
		System.out.println("Invalid input! Try again!");
		System.out.println("ENTER MARK 2: ");
		markb = sc.nextDouble();
		}
		
		System.out.println("ENTER MARK 3: ");
		double markc = sc.nextDouble();
		while(markc>100 || markc<0) {
		System.out.println("Invalid input! Try again!");
		System.out.println("ENTER MARK 3: ");
		markc = sc.nextDouble();
		}
		
		double avrg = (marka + markb + markc)/3;
		System.out.println("The average is: " + avrg);
	}

}
